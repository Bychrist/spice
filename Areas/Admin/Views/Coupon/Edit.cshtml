@model Spice.Models.Coupon
@{
    ViewData["Title"] = "Edit";
}

@{
    var base64 = Convert.ToBase64String(Model.Picture);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}


<br />
<h3 class="text-info"> Create Coupon</h3>
<br />

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            <div class="col-lg-4 offset-2">
                <div class="form-group">
                    <input type="hidden" asp-for="Id"  />
                    <strong>  <label asp-for="Name"></label></strong>
                    <input asp-for="Name" class="form-control" />
                    <small class="text-danger"> <span asp-validation-for="Name"></span> </small>
                </div>

            </div>
            <div class="col-md-3">
                <center>
                      
                    <img src="@imgSrc" class="img-fluid" asp-append-version="true">
                </center>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-4 offset-2">
                <div class="form-group">
                    <strong>  <label asp-for="Picture"></label></strong>
                    <input type="file" id="projectImage" name="files" multiple class="form-control" />
                </div>

            </div>
        </div>



        <div class="row">
            <div class="col-lg-4 offset-2">
                <div class="form-group">
                    <strong>  <label asp-for="CouponType"></label></strong>
                    <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control">
                    </select>

                </div>

            </div>
        </div>


        <div class="row">
            <div class="col-lg-4 offset-2">
                <div class="form-group">
                    <strong>  <label asp-for="Discount"></label></strong>
                    <input asp-for="Discount" class="form-control" />
                    <small class="text-danger"> <span asp-validation-for="Discount"></span> </small>
                </div>

            </div>
        </div>



        <div class="row">
            <div class="col-lg-4 offset-2">
                <div class="form-group">
                    <strong>  <label asp-for="MinimumAmount"></label></strong>
                    <input asp-for="MinimumAmount" class="form-control" />
                    <small class="text-danger"> <span asp-validation-for="MinimumAmount"></span> </small>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 offset-2">

                <div class="form-group">
                    <strong>  <label asp-for="IsActive"></label></strong>
                    <input type="checkbox" asp-for="IsActive" />
                </div>

            </div>
        </div>





        <div class="row">
            <div class="col-lg-4 offset-2">
                <div class="row">
                    <div class="col-6">
                        <span class="btn btn-success btn-block"><i class="fa fa-plus"></i> <input type="submit" value="Update" style="border:none;background:none;color:#fff" /> </span>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-block btn-primary"><i class="fa fa-arrow-left"> &nbsp;Back to list</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



