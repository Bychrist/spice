@model Spice.Models.SubCategory

@{
    ViewData["Title"] = "Details";
}



<br />
<br />
<div class="border backgroundWhite">


    <div class="row">
        <div class="offset-3 col-lg-6">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="category" style="font-weight:bolder">Category Name</label>
                    <input type="text" asp-for="@Model.Category.Name" readonly class="form-control"  />
                </div>
                <div class="form-group">
                    <label for="">Subcategory Name</label>
                    <input class="form-control" asp-for="@Model.Name" readonly />
                    
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id"><i class="fa fa-edit"></i> Edit </a>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <a asp-action="Index" class="btn btn-primary pull-right "> <i class="fa fa-arrow-left"></i> Back to list </a>
                    </div>
                </div>

            </form>
        </div>
    
    </div>

</div>




