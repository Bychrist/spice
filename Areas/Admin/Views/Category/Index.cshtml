@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h3 class="text-info">Category List</h3>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />

    <div>
        <table class="table table-striped border">
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    View
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>


            </tr>
            @if(Model.Count() > 0)
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Name</td>
                        <td> <a asp-action="Detail" title="view category: @category.Name " asp-route-id="@category.Id" class="btn btn-success"  ><i class="fa fa-eye"></i> </a> </td>
                        <td> <a asp-action="Edit" title="Edit category @category.Name" asp-route-id="@category.Id" class="btn btn-info"><i class="fa fa-edit"></i> </a></td>
                        <td> <a asp-action="Delete" title="Delete category @category.Name" asp-route-id="@category.Id" class="btn btn-danger"><i class="fa fa-trash"></i> </a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    
                    <td colspan="4">No record found</td>
                </tr>
            }


        </table>
    </div>
</div>