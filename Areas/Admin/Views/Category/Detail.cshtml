@model Spice.Models.Category

@{
    ViewData["Title"] = "Detail";
}





    <div class="container mt-5">
        <h3>The detials of @Model.Name</h3>
    </div>


<div class="border backgroundWhite">

    <div class="row">
        <div class="col-lg-4 offset-4">
            <h5><strong>Category Name</strong>: @Model.Name</h5>
            <h5>
                <strong>Category ID:</strong> @Model.Id
            </h5>

        </div>
    </div>

    <div class="row">
    

        <div class="col-lg-4 offset-4">
            <div class="row">
                <div class="col-lg-6">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-block btn-info"><i class="fa fa-edit"> &nbsp;Update</i></a>

                </div>
                <div class="col-lg-6">
                    <a asp-action="Index" class="btn btn-block btn-warning text-white"><i class="fa fa-arrow-left"> &nbsp;Back to list</i></a>
                </div>

            </div>



        </div>