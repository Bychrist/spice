@model Category
@{
    ViewData["Title"] = "Create";
}



<br />
<h3 class="text-info"> Create Category</h3>
<br />

<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-4 offset-4">
                <div class="form-group">
                    <strong>  <label asp-for="Name"></label></strong>
                    <input asp-for="Name" class="form-control" />
                    <small class="text-danger"> <span asp-validation-for="Name"></span> </small>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 offset-4">
                <div class="row">
                    <div class="col-6">
                        <span class="btn btn-success btn-block"><i class="fa fa-plus"></i> <input type="submit" value="Create" style="border:none;background:none;color:#fff" /> </span>
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-block btn-primary"><i class="fa fa-arrow-left"> &nbsp;Back to list</i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}